{
  "name": "Ma Liste de Tâches",
  "short_name": "Tâches",
  "description": "Application de liste de tâches avec notifications",
  "start_url": "./index.html",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "orientation": "portrait-primary",
  "lang": "fr",
  "dir": "ltr",
  "categories": ["productivity"],
  "shortcuts": [
    {
      "name": "Ajouter une tâche",
      "short_name": "Ajouter",
      "description": "Ajouter une nouvelle tâche",
      "url": "./index.html?action=add",
      "icons": [{ "src": "icon-add-96.png", "sizes": "96x96" }]
    }
  ],
  "permissions": [
    "notifications"
  ],
  "gcm_sender_id": "YOUR_SENDER_ID",
  "serviceworker": {
    "src": "./service-worker.js",
    "scope": "./"
  }
}
